# LanguageBridge Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control!

# Azure Cognitive Services - Speech Recognition
# Get these from: https://portal.azure.com → Cognitive Services → Speech → Keys and Endpoint
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# Azure Cognitive Services - Translator
# Get these from: https://portal.azure.com → Cognitive Services → Translator → Keys and Endpoint
AZURE_TRANSLATOR_KEY=your_azure_translator_key_here

# Backend API Endpoint
# For secure demo key provisioning and session management
API_ENDPOINT=https://languagebridge-api.azurewebsites.net/api

# Demo Access Code
# This is used for the MVP demo mode
# Teachers can enter this code in Settings to access the extension without personal Azure keys
DEMO_ACCESS_CODE=your_demo_code_here

# Environment Mode
# Options: development, staging, production
NODE_ENV=development

# Logging Level
# Options: debug, info, warn, error
LOG_LEVEL=info

# Feature Flags
# Enable/disable experimental features
FEATURE_GOOGLE_DOCS_ADAPTER=true
FEATURE_FLOATING_TRANSLATOR=true
FEATURE_DEMO_MODE=true

# Chrome Web Store Configuration
# Used for publishing and updates
CHROME_EXTENSION_ID=your_extension_id_here
CHROME_WEB_STORE_URL=https://chrome.google.com/webstore/detail/languagebridge/your_extension_id_here
